<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpeningActivity"
    android:background="@drawable/gradient"
    android:id="@+id/mainLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/chatImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/server"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chatImage"
            android:layout_centerHorizontal="true"
            android:text="Java Chat Server"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tcpBtn"
            android:onClick="tcpClicked"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:text="TCP"
            android:textSize="18dp" />

        <Button
            android:id="@+id/udpBtn"
            android:onClick="udpClicked"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tcpBtn"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:text="UDP"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:text="\u00A9 Subin Gyawali"/>

    </RelativeLayout>

</LinearLayout>
